{
    "name": "typescript-goat-template",
    "version": "0.0.0",
    "description": "personal template for bootstraping TypeScript project with all my favorite tools and features",
    "main": "tsconfig-paths-bootstrap.js",
    "esModuleInterop": true,
    "scripts": {
        "start": "node -r ./tsconfig-paths-bootstrap.js dist/index.js",
        "dev": "set NODE_ENV=development&&node .bin/loadDevEnv.js&& nodemon src/index.ts",
        "lint": "eslint . --fix",
        "ts": "tsc --noEmit",
        "build": "rimraf ./dist && npx tsc",
        "prepare": "husky",
        "pretty": "prettier --plugin=prettier-plugin-organize-imports --write ."
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@eslint/js": "^9.17.0",
        "eslint": "^9.17.0",
        "globals": "^15.14.0",
        "typescript-eslint": "^8.19.0",
        "@typescript-eslint/parser": "^8.19.0",
        "@eslint/eslintrc": "^3.2.0",
        "@tsconfig/recommended": "^1.0.8",
        "@types/lodash": "^4.17.13",
        "@types/node": "^20.17.7",
        "@typescript-eslint/eslint-plugin": "^8.15.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.2.10",
        "nodemon": "^3.1.7",
        "prettier": "3.2.5",
        "prettier-plugin-organize-imports": "^3.2.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.2"
    },
    "dependencies": {
        "dotenv": "^16.4.5",
        "lodash": "^4.17.21",
        "ts-node-register": "^1.0.0",
        "tsconfig-paths": "^4.2.0",
        "zod": "^3.23.8",
        "zod-validation-error": "^3.4.0"
    },
    "lint-staged": {
        "*.{ts,js}": [
            "eslint --fix",
            "prettier --write",
            "bash -c 'npm run ts'"
        ]
    }
}
